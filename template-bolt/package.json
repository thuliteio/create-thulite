    "build": "hugo --minify --gc",
    "preview": "vite preview --outDir public"
  },
  "dependencies": {
    "@thulite/bolt-core": "^1.4.0",
    "@thulite/images": "^3.3.0",
    "@thulite/seo": "^2.4.0",
    "thulite": "^2.5.0"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "vite": "^5.4.2"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
