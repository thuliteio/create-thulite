    "build": "hugo --minify --gc",
    "preview": "vite preview --outDir public"
  },
  "dependencies": {
    "@thulite/bolt-core": "^1.5.1",
    "@thulite/images": "^3.3.4",
    "@thulite/seo": "^2.4.3",
    "thulite": "^2.6.5"
  },
  "overrides": {
    "minimatch": "^10.2.2",
    "glob": "^13.0.6"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.8.1",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=24.13.0"
  }
}
