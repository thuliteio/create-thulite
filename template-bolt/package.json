{
  "name": "bolt",
  "version": "1.5.2",
  "description": "Minimal blog theme based on Bolt.css",
  "author": "Thulite",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thuliteio/bolt.git"
  },
  "scripts": {
    "create": "hugo new",
    "dev": "hugo server --disableFastRender --noHTTPCache",
