    "build": "hugo --minify --gc",
    "preview": "vite preview --outDir public"
  },
  "dependencies": {
    "@thulite/bolt-core": "^1.5.1",
    "@thulite/images": "^3.3.4",
    "@thulite/seo": "^2.4.3",
    "thulite": "^2.6.4"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=24.13.0"
  }
}
